<div id="container" class="gallery  flex flex-col my-18 " data-controller="slider">
  <div id="scrolling-content" class="no-scrollbar flex overflow-x-scroll -ml-12 pr-48 " data-slider-target="scrollContainer">

    <% @events.each_with_index do |event, i| %>
      <div class="flip flip-container mr-8 flex-shrink-0 gallery-item" data-slider-target="image" id='<%= i %>'>
          <div class="flip-content mx-24">
            <div class="flip-front flex flex-nowrap">
              <div class="inline-block ">
                <div
                  class="p-2 w-64 h-82 max-w-xs overflow-hidden rounded-lg shadow-md bg-white hover:shadow-xl transition-shadow duration-300 ease-in-out"
                >
                  <img max-height="40%" class="d-block w-100"
                       src="<%= i % 2 == 0 ? 'https://images.unsplash.com/photo-1581447109217-19026003eba5?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80' : 'https://images.unsplash.com/photo-1610050731641-f855ccdaf3f6?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2340&q=80' %>"
                       alt="<%= event.event_details['name'] %>">
                  <h3 class="tracking-widest mt-2 text-indigo-500 text-xs font-medium title-font"><%= event.event_details['recurrence_description'] %></h3>
                  <h2 class="text-lg text-gray-900 font-medium title-font mb-4"><%= event.event_details['name'] %></h2>          </div>
              </div>
            </div>
            <div class="flip-back">
              <div class="inline-block px-3">
                <div
                  class="p-2 w-64 h-82 max-w-xs overflow-hidden rounded-lg shadow-md bg-white hover:shadow-xl transition-shadow duration-300 ease-in-out">
                  <% if event.event_details['description'].nil? %>
                  <% else %>
                    <p class="mt-4 leading-relaxed text-base"><%= event.event_details['description'].html_safe %></p>
                  <% end %>          </div>
              </div>
            </div>
          </div>
      </div>
    <% end %>

  </div>
  <div class="flex mx-auto ">
    <ul class="flex justify-center">
      <% @events.each_with_index do |event, i| %>
        <li class="h-6 w-6 rounded-full mx-2 cursor-pointer bg-gray-500" data-action="click->slider#scrollTo" data-image-id="<%= i %>" data-slider-target="indicator"></li>
      <% end %>
    </ul>
  </div>
</div>