

<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto max-w-7x1">
    <div class="flex flex-wrap w-full mb-4 p-4">
      <div class="w-full mb-6 lg:mb-0">
        <h1 class="sm:text-4xl text-5xl font-medium font-bold title-font mb-2 text-gray-900">Events</h1>
        <div class="h-1 w-20 bg-indigo-500 rounded"></div>
      </div>
    </div>
    <div class="flex flex-wrap -m-4 " >
    <% @calendar['events']['event'].each do |event| %>
      <% if event['public_calendar_listed'] == "true" %>
          <div class="xl:w-1/3 md:w-1/2 p-4 border mx-2">
            <div class="bg-white p-6 rounded-lg">
              <img class="lg:h-60 xl:h-56 md:h-64 sm:h-72 xs:h-72 h-72  rounded w-full object-cover object-center mb-6" src="<%= event['image'] %>" alt="Image Size 720x400">
              <h2 class="text-lg text-gray-900 font-medium title-font mb-4"><%= event['name'] %></h2>
              <div class="h-1 -mt-2 w-20 bg-indigo-500 rounded"></div>
              <% if event['description'].present? %>
              <p class="mt-4 leading-relaxed text-base"><%= event['description'].html_safe %></p>
              <% end %>
              <p class="mt-4 leading-relaxed text-sm">Location: <%= event['location']['name'] %> - <%= event['location']['street_address'] %><br>
                <%= event['location']['city'] %>, <%= event['location']['state'] %> <%= event['location']['zip'] %>
              </p>
            </div>
          </div>
      <% end %>
    <% end %>
    </div>
  </div>
</section>